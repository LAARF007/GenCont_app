<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@android:color/white"
        android:clipToPadding="false">

        <!-- Language Badge -->
        <TextView
            android:id="@+id/tvLanguageBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Français"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:background="#3F51B5"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            android:elevation="1dp"
            android:translationZ="1dp"
            android:contentDescription="Langue: Français"
            tools:text="Français" />

        <!-- Titre de la leçon -->
        <TextView
            android:id="@+id/tvLessonTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Java"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"
            android:importantForAccessibility="yes"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvLanguageBadge"
            android:layout_marginEnd="8dp"
            tools:text="Java" />

        <!-- Description de la leçon -->
        <TextView
            android:id="@+id/tvLessonDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet..."
            android:textSize="16sp"
            android:textColor="#616161"
            android:lineSpacingExtra="6dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvLessonTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." />

        <!-- Difficulty Indicator -->
        <TextView
            android:id="@+id/tvDifficultyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficulté:"
            android:textSize="14sp"
            android:textColor="#757575"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@id/tvLessonDesc"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            tools:text="Difficulté:" />

        <LinearLayout
            android:id="@+id/difficultyStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@id/tvDifficultyLabel"
            app:layout_constraintBottom_toBottomOf="@id/tvDifficultyLabel"
            app:layout_constraintStart_toEndOf="@id/tvDifficultyLabel"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/starOne"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/btn_star_big_on"

                android:importantForAccessibility="no"/>

            <ImageView
                android:id="@+id/starTwo"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/btn_star_big_on"

                android:importantForAccessibility="no"/>

            <ImageView
                android:id="@+id/starThree"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/btn_star_big_off"

                android:importantForAccessibility="no"/>
        </LinearLayout>

        <!-- Time indicator -->
        <TextView
            android:id="@+id/tvTimeEstimate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 min"
            android:textSize="14sp"
            android:textColor="#757575"
            android:fontFamily="sans-serif"
            android:drawableStart="@android:drawable/ic_menu_recent_history"
            android:drawablePadding="4dp"
            android:drawableTint="#757575"
            app:layout_constraintTop_toTopOf="@id/tvDifficultyLabel"
            app:layout_constraintBottom_toBottomOf="@id/tvDifficultyLabel"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="30 min" />

        <!-- Progress indicator -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_marginTop="16dp"
            android:progress="25"
            android:progressTint="#4CAF50"
            android:background="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@id/tvDifficultyLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="25% complété" />

        <!-- Progress text -->
        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="12sp"
            android:textColor="#757575"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@id/progressBar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Conteneur des boutons avec CardView pour l'effet élevé -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvProgress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Bouton Start Lesson -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartLesson"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:text="Commencer"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="8dp"
                app:backgroundTint="#FF6D00"
                app:rippleColor="#66FFFFFF"
                android:layout_marginEnd="8dp"
                android:contentDescription="Commencer la leçon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnQuiz"
                app:layout_constraintWidth_percent="0.5"
                app:icon="@android:drawable/ic_media_play"
                app:iconGravity="textStart"
                app:iconTint="@android:color/white"
                app:iconPadding="8dp" />

            <!-- Bouton Quiz -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnQuiz"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:text="Quiz"
                android:textSize="16sp"
                android:textColor="#FF6D00"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="8dp"
                app:backgroundTint="@android:color/white"
                app:strokeColor="#FF6D00"
                app:strokeWidth="1dp"
                app:rippleColor="#33FF6D00"
                android:layout_marginStart="8dp"
                android:contentDescription="Démarrer le quiz"
                app:layout_constraintTop_toTopOf="@id/btnStartLesson"
                app:layout_constraintStart_toEndOf="@id/btnStartLesson"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.5"
                app:icon="@android:drawable/ic_menu_help"
                app:iconGravity="textStart"
                app:iconTint="#FF6D00"
                app:iconPadding="8dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>